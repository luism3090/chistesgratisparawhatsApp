<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".CrearChisteActivity">

    <com.rockerhieu.emojicon.EmojiconEditText
        android:id="@+id/edtCrearChiste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Escribe tu mejor chiste"
        android:inputType="textMultiLine"
        android:maxLength="500"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <FrameLayout
        android:id="@+id/emojicons"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/edtCrearChiste"
        android:layout_alignParentEnd='true'
        android:layout_alignParentRight='true'
        android:layout_gravity="bottom"
        android:visibility="invisible"

        />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabEmoticones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="15dp"
        app:icon="@drawable/ic_emoticon_risa"
        android:theme="@style/MyMaterialTheme"></com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabEnviarChistes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:maxLines="540"
        android:text="Enviar Chiste"
        android:textSize="15dp"
        android:theme="@style/MyMaterialTheme"></com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


</androidx.coordinatorlayout.widget.CoordinatorLayout>